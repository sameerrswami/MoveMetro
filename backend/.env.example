PORT=5000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://movemetro:movemetro_pass@localhost:5432/movemetro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=movemetro
DB_USER=movemetro
DB_PASSWORD=movemetro_pass
DB_DIALECT=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-in-production-refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# QR / HMAC
QR_HMAC_SECRET=change-me-in-production-qr

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Graph
TRANSFER_PENALTY=5

# Metrics
ENABLE_METRICS=true
